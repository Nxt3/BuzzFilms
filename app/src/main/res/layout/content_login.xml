<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nullpointexecutioners.buzzfilms.LoginFragment">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/username_hint"
        android:ems="10"
        android:id="@+id/login_username"
        android:layout_gravity="center"
        android:layout_above="@+id/login_password"
        android:layout_alignStart="@+id/login_password" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password"
        android:layout_gravity="center"
        android:hint="@string/password_hint"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="238dp" />

    <Button
        android:onClick="onLoginClick"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_login"
        android:id="@+id/login_button"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/login_username"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/btnReturn"
        android:onClick="onReturnClick"
        android:layout_below="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_alignEnd="@+id/login_button" />

    <ImageView
        android:src="@drawable/buzzfilms_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buzzfilms_login_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
